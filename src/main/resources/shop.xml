<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/aop https://www.springframework.org/schema/aop/spring-aop.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">
    <aop:aspectj-autoproxy/>
    <context:annotation-config/>
    <context:component-scan base-package="pl.training.shop"/>

    <import resource="payments.xml"/>
    <import resource="order.xml"/>
    <import resource="product.xml"/>

    <bean id="shop" class="pl.training.shop.ShopService">
        <constructor-arg name="orderService" ref="orderService"/>
        <constructor-arg name="paymentService" ref="fakePaymentService"/>
        <constructor-arg name="productService" ref="productService"/>
    </bean>
    <bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
        <property name="basename" value="messages"/>
        <property name="defaultEncoding" value="utf-8"/>
    </bean>

</beans>
